<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_toolbar"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:elevation="@dimen/divider_size">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </com.google.android.material.appbar.AppBarLayout>

  <FrameLayout
    android:id="@+id/player_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/divider"
    app:layout_constraintBottom_toTopOf="@id/player_controller_container"
    app:layout_constraintTop_toBottomOf="@id/app_bar">

    <include
      android:id="@+id/player_content"
      layout="@layout/layout_player_content" />

  </FrameLayout>

  <FrameLayout
    android:id="@+id/player_controller_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/player_container"
    app:layout_constraintEnd_toEndOf="@id/player_container"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/player_container">

    <include
      android:id="@+id/player_controller_content"
      layout="@layout/layout_player_controller_content" />

  </FrameLayout>

  <View
    android:id="@+id/divider"
    android:layout_width="@dimen/divider_size"
    android:layout_height="0dp"
    android:background="?attr/colorOutlineVariant"
    app:layout_constraintStart_toEndOf="@id/player_container"
    app:layout_constraintEnd_toStartOf="@id/cues_container"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/app_bar" />

  <FrameLayout
    android:id="@+id/cues_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toEndOf="@id/divider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/app_bar">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_cues"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="5dp" />

    <TextView
      android:id="@+id/no_cues"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:layout_gravity="center"
      android:text="@string/proj_no_subtitles" />

  </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>